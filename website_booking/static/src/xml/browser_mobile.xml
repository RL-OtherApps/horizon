<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="website_booking.browser_mobile">
        <div class="row">
            <div class="col s6" align="center">
                <a id="today" class="waves-effect waves-light btn-large"><t t-esc="widget.today.format('DD/MM')"/></a><br/>
                Auhourd'hui
            </div>
            <div class="col s6" align="center">
                <a id="tomorrow" class="waves-effect waves-light btn-large"><t t-esc="widget.tomorrow.format('DD/MM')"/></a><br/>
                Demain
            </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input id="from_hour" type="text" data-length="10" class="invalid"/>
            <label for="input_text">From Hour</label>
          </div>
          <div class="input-field col s6">
            <input id="to_hour" type="text" data-length="10" class="invalid" />
            <label for="input_text">To Hour</label>
          </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <select class="select-asset-id browser-default" disabled="">
                    <option value="" disabled="" selected="">Choose your room</option>
                </select>
            </div>
        </div>
    </t>
</templates>